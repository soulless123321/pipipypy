<Window x:Class="ArduinoAudioController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Arduino Audio Controller" 
        Height="600" 
        Width="900"
        MinHeight="500"
        MinWidth="800"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Верхняя панель -->
            <Border x:Name="TopPanel" 
                    Background="#2D2D2D" 
                    CornerRadius="10" 
                    Padding="15"
                    BorderBrush="#404040"
                    BorderThickness="1"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Заголовок и переключение темы -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🎵" FontSize="20" Margin="0,0,10,0" Foreground="White"/>
                        <StackPanel>
                            <TextBlock x:Name="TitleText"
                                       Text="Arduino Audio Controller" 
                                       Foreground="White" 
                                       FontSize="16" 
                                       FontWeight="Bold"/>
                            <Button x:Name="ThemeToggleButton"
                                    Content="☀️ Светлая тема" 
                                    Background="#2D2D2D"
                                    Foreground="White"
                                    BorderBrush="#404040"
                                    BorderThickness="1"
                                    Padding="10,5"
                                    FontSize="11"
                                    Click="ThemeToggleButton_Click"
                                    Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Статус подключения -->
                    <StackPanel Grid.Column="1" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Border x:Name="ConnectionStatusIndicator"
                                Width="10" 
                                Height="10" 
                                CornerRadius="5" 
                                Background="#757575"
                                Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectionStatusText" 
                                   Text="Не подключено"
                                   Foreground="#CCCCCC"
                                   FontSize="12"/>
                    </StackPanel>

                    <!-- Управление подключением -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <ComboBox x:Name="ComPortComboBox" 
                                  Background="White"
                                  Foreground="#212121"
                                  BorderBrush="#007ACC"
                                  BorderThickness="2"
                                  Padding="8,4"
                                  FontSize="12"
                                  Height="32"
                                  Width="120">
                            <ComboBox.ItemContainerStyle>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="White"/>
                                    <Setter Property="Foreground" Value="#212121"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="8,4"/>
                                </Style>
                            </ComboBox.ItemContainerStyle>
                        </ComboBox>
                        <Button x:Name="ConnectButton" 
                                Content="ПОДКЛЮЧИТЬ" 
                                Background="#333333"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="15,10"
                                FontSize="12"
                                Margin="10,0,0,0"
                                Width="100"
                                Click="ConnectButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Основное содержимое -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ЛЕВАЯ ПАНЕЛЬ - Лог событий -->
                <Border Grid.Column="0"
                        x:Name="LeftPanel"
                        Background="#2D2D2D" 
                        CornerRadius="10" 
                        Padding="15"
                        BorderBrush="#404040"
                        BorderThickness="1" HorizontalAlignment="Left" Width="542">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Заголовок лога -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock x:Name="LogHeaderText"
                                       Text="Лог событий" 
                                       Foreground="White"
                                       FontSize="16"
                                       FontWeight="SemiBold"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="ClearLogButton" 
                                        Content="Очистить" 
                                        Background="#333333"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10,6"
                                        FontSize="11"
                                        Click="ClearLogButton_Click"/>
                                <Button x:Name="ExportLogButton" 
                                        Content="Экспорт" 
                                        Background="#333333"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10,6"
                                        FontSize="11"
                                        Margin="5,0,0,0"
                                        Click="ExportLogButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Лог событий -->
                        <Border Grid.Row="1"
                                Background="#252525"
                                BorderBrush="#404040"
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="0,0,0,10">
                            <ScrollViewer x:Name="LogScrollViewer" 
                                          VerticalScrollBarVisibility="Auto"
                                          HorizontalScrollBarVisibility="Disabled">
                                <TextBox x:Name="EventLogTextBox"
                                         Background="Transparent"
                                         Foreground="#CCCCCC"
                                         BorderThickness="0"
                                         FontFamily="Consolas"
                                         FontSize="11"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         VerticalAlignment="Top"
                                         HorizontalAlignment="Stretch"
                                         Padding="8,4"/>
                            </ScrollViewer>
                        </Border>

                        <!-- Статистика -->
                        <Border x:Name="StatsPanel"
                                Grid.Row="2"
                                Background="#252525" 
                                CornerRadius="5" 
                                Padding="8">
                            <Grid>
                                <TextBlock x:Name="MessagesCountText" 
                                           Text="Сообщений: 0"
                                           Foreground="#CCCCCC"
                                           FontSize="11"/>
                                <TextBlock x:Name="ConnectionTimeText" 
                                           Text="Время: 00:00:00"
                                           Foreground="#CCCCCC"
                                           FontSize="11"
                                           HorizontalAlignment="Right"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <!-- ПРАВАЯ ПАНЕЛЬ - Управление -->
                <Border
                        x:Name="RightPanel"
                        Background="#2D2D2D" 
                        CornerRadius="10" 
                        Padding="15"
                        BorderBrush="#404040"
                        BorderThickness="1"
                        Margin="547,0,0,0" Grid.ColumnSpan="2">
                    <StackPanel>
                        <TextBlock x:Name="ControlHeaderText"
                                   Text="Управление" 
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Кнопки управления -->
                        <Grid Margin="0,0,0,15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Первая строка кнопок -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                <Button x:Name="PlayButton" 
                                        Content="▶ ВОСПРОИЗВЕСТИ" 
                                        Background="#00C853"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Click="PlayButton_Click"/>
                                <Button x:Name="StopButton" 
                                        Content="⏹ ОСТАНОВИТЬ" 
                                        Background="#FF5252"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        Margin="10,0,0,0"
                                        Click="StopButton_Click"/>
                            </StackPanel>

                            <!-- Вторая строка кнопок -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <Button x:Name="PrevButton" 
                                        Content="⏮ НАЗАД" 
                                        Background="#333333"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        Click="PrevButton_Click"/>
                                <Button x:Name="NextButton" 
                                        Content="⏭ ВПЕРЕД" 
                                        Background="#333333"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,10"
                                        FontSize="12"
                                        Margin="10,0,0,0"
                                        Click="NextButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- Громкость -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock x:Name="VolumeLabelText"
                                       Text="Громкость" 
                                       Foreground="#CCCCCC"
                                       FontSize="13"
                                       Margin="0,0,0,5"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="VolumeMinText"
                                           Grid.Column="0" 
                                           Text="0" 
                                           Foreground="#CCCCCC"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="0,0,5,0"/>

                                <Slider x:Name="VolumeSlider" 
                                        Grid.Column="1"
                                        Minimum="0" 
                                        Maximum="30" 
                                        Value="15"
                                        VerticalAlignment="Center"
                                        ValueChanged="VolumeSlider_ValueChanged"/>

                                <TextBlock x:Name="VolumeText" 
                                           Grid.Column="2"
                                           Text="15" 
                                           Foreground="#CCCCCC"
                                           FontSize="13"
                                           VerticalAlignment="Center"
                                           Margin="5,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Информация о состоянии -->
                        <Border x:Name="InfoPanel"
                                Background="#252525" 
                                CornerRadius="5" 
                                Padding="10">
                            <StackPanel>
                                <TextBlock x:Name="CurrentTrackText" 
                                           Text="Трек: --"
                                           Foreground="#CCCCCC"
                                           FontSize="13"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="StatusText" 
                                           Text="Статус: --"
                                           Foreground="#CCCCCC"
                                           FontSize="13"/>
                                <TextBlock x:Name="VolumeInfoText" 
                                           Text="Громкость: --"
                                           Foreground="#CCCCCC"
                                           FontSize="13"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>